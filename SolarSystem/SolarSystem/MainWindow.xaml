<Window x:Class="SolarSystem.MainWindow" x:Name="spaceScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolarSystem"
        mc:Ignorable="d"
        SizeToContent="Manual"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name ="solarSystemGrid" Background="Black">
        <Canvas Margin="0, 0, 0, 0" Name="orbitFrame" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Canvas Margin="0, 0, 0, 0" Name="spaceFrame"/>
    </Grid>
</Window>
